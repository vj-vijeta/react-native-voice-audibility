{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "react-native": ["./node_modules/react-native"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}